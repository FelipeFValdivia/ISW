
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card create-teacher-card">
      <div class="card-content black-text">
        <center><span class="card-title"><%=@user.name%></span></center>        
        <br>
        <p>Correo: <%=@user.email%></p>
        
        <div class="row">
	        <p>Cursos creados: <%=@user.courses.count%></p>
	        <br>
			    <table class="highlight">
			      <thead>
			        <tr>
			            <th>Nombre curso</th>
			            <th>Descripción</th> 
			        </tr>
			      </thead>

			      <tbody>
			        <%@user.courses.each do |course|%>
			          <tr>
			            <td><%=course.name%></td>
			            <td>-</td>
			            <td>
			              <%=link_to( controller: 'courses', action: 'show', id: course.id) do%>
			                <i class="edit-icons material-icons tiny">mode_edit</i>
			              <%end%>              
			            </td>
			          </tr>
			        <%end%>

			      </tbody>
			    </table> 
		    </div>
		    <br>
		    <br>
		    <div class="row">
	 				<%= button_to "Eliminar a #{@user.name}", {:controller => :users, :action => 'destroy', :id => @user.id }, :method => :delete, class: "waves-effect waves-ripple btn col s12 m8 offset-m2", data: { confirm: "¿Estás seguro que deseas eliminar al profesor?" } %>
 				</div>		           
      </div>
    </div>
  </div>
</div>